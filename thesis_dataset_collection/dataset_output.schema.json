{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/terraform-dataset-sample.schema.json",
  "title": "Terraform Dataset Sample",
  "description": "Output schema for accepted Terraform projects after crawl and filtering.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "sample_id",
    "repo_id",
    "repo_full_name",
    "repo_url",
    "commit_sha",
    "crawl_timestamp",
    "source",
    "terraform_files",
    "feature_vector",
    "filter_trace"
  ],
  "properties": {
    "sample_id": {
      "type": "string",
      "description": "Stable sample identifier generated by the pipeline."
    },
    "repo_id": {
      "type": "integer",
      "minimum": 1,
      "description": "GitHub repository numeric identifier."
    },
    "repo_full_name": {
      "type": "string",
      "pattern": "^[^/]+/[^/]+$",
      "description": "Repository full name in owner/repo format."
    },
    "repo_url": {
      "type": "string",
      "format": "uri"
    },
    "commit_sha": {
      "type": "string",
      "pattern": "^[a-fA-F0-9]{40}$",
      "description": "Pinned commit hash used for reproducibility."
    },
    "crawl_timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "UTC timestamp when this sample was collected."
    },
    "source": {
      "type": "string",
      "const": "github"
    },
    "license": {
      "type": [
        "string",
        "null"
      ],
      "description": "Repository license identifier, if available."
    },
    "terraform_files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "path",
          "sha256"
        ],
        "properties": {
          "path": {
            "type": "string",
            "description": "Relative path of .tf file in repository."
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-fA-F0-9]{64}$",
            "description": "Content hash for deduplication and integrity."
          }
        }
      }
    },
    "feature_vector": {
      "type": "object",
      "description": "Numerical/boolean feature dictionary from IaC feature extractor.",
      "additionalProperties": {
        "type": [
          "number",
          "integer",
          "boolean"
        ]
      }
    },
    "filter_trace": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "keyword_exclusion",
        "maturity_pass",
        "syntax_pass",
        "structural_pass",
        "behavior_outlier_score",
        "behavior_pass",
        "accepted"
      ],
      "properties": {
        "keyword_exclusion": {
          "type": "boolean"
        },
        "maturity_pass": {
          "type": "boolean"
        },
        "syntax_pass": {
          "type": "boolean"
        },
        "structural_pass": {
          "type": "boolean"
        },
        "behavior_outlier_score": {
          "type": "number",
          "minimum": 0
        },
        "behavior_pass": {
          "type": "boolean"
        },
        "accepted": {
          "type": "boolean"
        },
        "reject_reason": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}
